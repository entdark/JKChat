<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSurfaceContainerHighest">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/appbarlayout"
                android:layout_alignRight="@id/appbarlayout"
                android:layout_alignTop="@id/appbarlayout"
                android:layout_alignBottom="@id/appbarlayout"
                android:scaleType="centerCrop"
                app:tint="@color/bg_preview_tint"
                app:tintMode="src_over"
                app:srcCompat="@drawable/bg_ja_preview"
                app:MvxBind="DrawableName ServerPreview(Game)"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/appbarlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:paddingLeftFitsWindowInsetsButExpanded="true"
                app:paddingRightFitsWindowInsets="true"
                app:paddingTopFitsWindowInsets="true">
                <com.google.android.material.appbar.MaterialToolbar
                    style="@style/ToolbarTitle"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textview.MaterialTextView
                    style="@style/OnSurfaceText.HeadlineSmall"
                    tools:text="Server Title 01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    app:MvxBind="TextFormatted ColourText(Title)"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="12dp"
                    android:paddingHorizontal="16dp"
                    android:gravity="center_vertical">
                    <include layout="@layout/connection_status"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/connect_button"
                        style="?attr/materialButtonOutlinedStyle"
                        tools:text="Disconnect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:iconPadding="8dp"
                        app:MvxBind="Click ConnectCommand; Text If(EnumBool(Status, 'Disconnected'), 'Connect', 'Disconnect')"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@null"
                    app:paddingLeftFitsWindowInsetsButExpanded="true"
                    app:paddingRightFitsWindowInsets="true"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap|snapMargins">
                    <MvvmCross.Platforms.Android.Binding.Views.MvxLinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:background="?attr/colorSurface"
                        app:MvxItemTemplate="@layout/server_info_primary_item"
                        app:MvxBind="ItemsSource PrimaryInfoItems"/>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorSurface"
                    app:paddingLeftFitsWindowInsetsButExpanded="true"
                    app:paddingRightFitsWindowInsets="true"/>
            </com.google.android.material.appbar.AppBarLayout>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:paddingLeftFitsWindowInsetsButExpanded="true"
                app:paddingRightFitsWindowInsets="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
    <include layout="@layout/loading"/>
</FrameLayout>
