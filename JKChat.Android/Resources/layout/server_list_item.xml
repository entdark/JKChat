<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:padding="4dp"
        android:background="@color/item_background">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_password"
                android:scaleType="centerInside"
                app:MvxBind="Visibility Visibility(NeedPassword, true)"/>
            <TextView
                tools:text="Server name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/RegularText.18.Bold"
                android:ellipsize="end"
                android:lines="1"
                app:MvxBind="TextFormatted ColourText(ServerName)"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_map"
                android:scaleType="centerInside"/>
            <TextView
                tools:text="Map name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/RegularText.15.Medium"
                android:ellipsize="end"
                android:lines="1"
                app:MvxBind="Text MapName"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_players"
                android:scaleType="centerInside"/>
                <TextView
                    tools:text="16/32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/RegularText.15.Medium"
                    android:ellipsize="end"
                    android:lines="1"
                    app:MvxBind="Text Players"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_ping"
                android:scaleType="centerInside"/>
                <TextView
                    tools:text="32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/RegularText.15.Medium"
                    android:ellipsize="end"
                    android:lines="1"
                    app:MvxBind="Text Ping"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_gametype"
                android:scaleType="centerInside"/>
                <TextView
                    tools:text="CTF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/RegularText.15.Medium"
                    android:ellipsize="end"
                    android:lines="1"
                    app:MvxBind="Text GameType"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <FrameLayout
                    android:layout_width="28dp"
                    android:layout_height="28dp">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center"
                        android:src="@drawable/disconnected_background"
                        android:scaleType="fitCenter"
                        app:MvxBind="DrawableName ConnectionIcon(Status)"/>
                </FrameLayout>
                <TextView
                    tools:text="Connected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/RegularText.15.Medium"
                    android:ellipsize="end"
                    android:lines="1"
                    app:MvxBind="Text Status"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/item_selection"/>">
</FrameLayout>
