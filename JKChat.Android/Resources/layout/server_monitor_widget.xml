<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_layout"
    android:theme="@style/WidgetThemeMaterial3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="12dp">
        <TextView
            style="@style/OnSurfaceText.TitleMedium"
            android:id="@+id/server_name_textview"
            tools:text="Server Title 01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"/>
        <TextView
            style="@style/OnSurfaceText.BodyMedium"
            android:id="@+id/players_textview"
            tools:text="27/32 players"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lines="1"
            android:ellipsize="end"/>
        <TextView
            android:visibility="visible"
            style="@style/OnSurfaceText.BodyMedium"
            android:id="@+id/map_textview"
            tools:text="MPA/FFA 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:lines="1"
            android:ellipsize="end"/>
    </LinearLayout>
    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/refresh_button"
        android:text="Refresh"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingHorizontal="16dp"/>
    <Button
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:id="@+id/players_button"
        android:text="Players"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingHorizontal="16dp"/>
    <ProgressBar
        android:id="@+id/loading_progressbar"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerInParent="true"/>
</RelativeLayout>
