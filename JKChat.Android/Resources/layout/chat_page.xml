<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainerHigh">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:paddingLeftFitsWindowInsetsButExpanded="true"
        app:paddingRightFitsWindowInsets="true"
        app:paddingTopFitsWindowInsets="true"
        app:liftOnScrollTargetViewId="@id/mvxrecyclerview">
        <include layout="@layout/toolbar"/>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <mvvmcross.droidx.recyclerview.MvxRecyclerView
                android:id="@+id/mvxrecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipToPadding="false"
                app:paddingLeftFitsWindowInsetsButExpanded="true"
                app:paddingRightFitsWindowInsets="true"
	            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:stackFromEnd="true"
                app:reverseLayout="false"
                app:MvxTemplateSelector="JKChat.Android.TemplateSelectors.ChatItemTemplateSelector,JKChat.Android"
                app:MvxBind="ItemsSource Items; ItemLongClick SelectCommand"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="?attr/colorSurface"
                app:paddingLeftFitsWindowInsetsButExpanded="true"
                app:paddingRightFitsWindowInsets="true"
                app:paddingBottomFitsWindowInsets="true">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/colorSurfaceContainerLow"
                    app:MvxBind="Visibility Visibility(SelectingChatType)">
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:textColor="?attr/colorOnSurface"
                        android:text="Common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:icon="@drawable/ic_groups"
                        app:iconTint="@color/chat_type_common"
                        app:iconPadding="8dp"
                        app:MvxBind="Click CommonChatTypeCommand"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:textColor="?attr/colorOnSurface"
                        android:text="Team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:icon="@drawable/ic_group"
                        app:iconTint="@color/chat_type_team"
                        app:iconPadding="8dp"
                        app:MvxBind="Click TeamChatTypeCommand"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:textColor="?attr/colorOnSurface"
                        android:text="Private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:icon="@drawable/ic_person"
                        app:iconTint="@color/chat_type_private"
                        app:iconPadding="8dp"
                        app:MvxBind="Click PrivateChatTypeCommand"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/chat_type_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="0"
                        android:layout_gravity="bottom"
                        android:background="?android:attr/actionBarItemBackground"
                        android:tint="@color/chat_type_common"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_groups"
                        app:MvxBind="Click ChatTypeCommand; DrawableName ChatTypeIcon(ChatType)"/>
                    <EditText
                        style="@style/OnSurfaceText.BodyLarge"
                        android:id="@+id/message_edittext"
                        android:hint="Write a message..."
                        android:textColorHint="?attr/colorSurfaceVariant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:minHeight="48dp"
                        android:maxLength="149"
                        android:background="@null"
                        android:inputType="text|textMultiLine"
                        app:MvxBind="Text Message"/>
<!--                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/send_button"
                        style="@style/Widget.Material3.Button.IconButton.Fixed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_gravity="bottom"
                        app:icon="@drawable/ic_send"
                        app:MvxBind="Click SendMessageCommand"/>-->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_gravity="bottom">
                        <ImageButton
                            android:id="@+id/command_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?android:attr/actionBarItemBackground"
                            android:tint="?attr/colorOnSurface"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_command"
                            app:MvxBind="Click StartCommandCommand"/>
                        <ImageButton
                            android:id="@+id/send_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?android:attr/actionBarItemBackground"
                            android:tint="?attr/colorOnSurface"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_send"
                            app:MvxBind="Click SendMessageCommand"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <mvvmcross.droidx.recyclerview.MvxRecyclerView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="48dp"
            android:layout_gravity="bottom"
            app:paddingLeftFitsWindowInsetsButExpanded="true"
            app:paddingRightFitsWindowInsets="true"
            app:marginBottomFitsWindowInsets="true"
	        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:stackFromEnd="true"
            app:reverseLayout="false"
            app:MvxItemTemplate="@layout/command_item"
            app:MvxBind="ItemsSource CommandItems; ItemClick CommandItemClickCommand; Visibility Visibility(CommandItems.Count)"/>
        <include layout="@layout/loading"/>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
