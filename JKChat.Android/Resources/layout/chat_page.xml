<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainerHigh">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:paddingLeftFitsWindowInsetsButExpanded="true"
        app:paddingRightFitsWindowInsets="true"
        app:paddingTopFitsWindowInsets="true"
        app:liftOnScroll="false">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include layout="@layout/toolbar"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:paddingLeft="16dp"
                android:paddingRight="24dp"
                android:paddingVertical="12dp"
                android:background="?attr/colorSurfaceContainerLow"
                app:MvxBind="Click ServerInfoCommand">
                <com.google.android.material.textview.MaterialTextView
                    style="@style/OnSurfaceText.LabelMedium"
                    tools:text="Red: 2 Blue: 5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|top"
                    app:MvxBind="TextFormatted ColourText(Scores)"/>
                <com.google.android.material.textview.MaterialTextView
                    style="@style/OnSurfaceText.LabelMedium"
                    android:text="13:37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:lines="1"
                    android:ellipsize="none"
                    android:gravity="top|end"
                    app:MvxBind="Text Timer"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <mvvmcross.droidx.recyclerview.MvxRecyclerView
                android:id="@+id/mvxrecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipToPadding="false"
	            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:stackFromEnd="true"
                app:reverseLayout="false"
                app:MvxTemplateSelector="JKChat.Android.TemplateSelectors.ChatItemTemplateSelector,JKChat.Android"
                app:MvxBind="ItemsSource Items; ItemLongClick SelectCommand"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="?attr/colorSurface"
                app:paddingLeftFitsWindowInsetsButExpanded="true"
                app:paddingRightFitsWindowInsets="true"
                app:paddingBottomFitsWindowInsets="true">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="?attr/colorSurfaceContainerLow"
                    app:MvxBind="Visibility Visibility(SelectingChatType)">
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:textColor="?attr/colorOnSurface"
                        android:text="Common"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:icon="@drawable/ic_groups"
                        app:iconTint="@color/chat_type_common"
                        app:iconPadding="8dp"
                        app:MvxBind="Click CommonChatTypeCommand"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:textColor="?attr/colorOnSurface"
                        android:text="Team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:icon="@drawable/ic_group"
                        app:iconTint="@color/chat_type_team"
                        app:iconPadding="8dp"
                        app:MvxBind="Click TeamChatTypeCommand"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <com.google.android.material.button.MaterialButton
                        style="@style/Widget.Material3.Button.TextButton.Icon"
                        android:textColor="?attr/colorOnSurface"
                        android:text="Private"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        app:icon="@drawable/ic_person"
                        app:iconTint="@color/chat_type_private"
                        app:iconPadding="8dp"
                        app:MvxBind="Click PrivateChatTypeCommand"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/chat_type_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="0"
                        android:layout_gravity="bottom"
                        android:background="?android:attr/actionBarItemBackground"
                        android:tint="@color/chat_type_common"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_groups"
                        app:MvxBind="Click ChatTypeCommand; DrawableName ChatTypeIcon(ChatType)"/>
                    <EditText
                        style="@style/OnSurfaceText.BodyLarge"
                        android:id="@+id/message_edittext"
                        android:hint="Write a message..."
                        android:textColorHint="?attr/colorSurfaceVariant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="0dp"
                        android:paddingVertical="4dp"
                        android:minHeight="48dp"
                        android:maxLength="149"
                        android:background="@null"
                        android:inputType="text|textMultiLine"
                        app:MvxBind="Text Message"/>
<!--                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/send_button"
                        style="@style/Widget.Material3.Button.IconButton.Fixed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_gravity="bottom"
                        app:icon="@drawable/ic_send"
                        app:MvxBind="Click SendMessageCommand"/>-->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_gravity="bottom">
                        <ImageButton
                            android:id="@+id/command_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?android:attr/actionBarItemBackground"
                            android:tint="?attr/colorOnSurface"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_command"
                            app:MvxBind="Click StartCommandCommand"/>
                        <ImageButton
                            android:id="@+id/send_button"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?android:attr/actionBarItemBackground"
                            android:tint="?attr/colorOnSurface"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_send"
                            app:MvxBind="Click SendMessageCommand"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <mvvmcross.droidx.recyclerview.MvxRecyclerView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="48dp"
            android:layout_gravity="bottom"
            app:marginBottomFitsWindowInsets="true"
	        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:stackFromEnd="true"
            app:reverseLayout="false"
            app:MvxItemTemplate="@layout/command_item"
            app:MvxBind="ItemsSource CommandItems; ItemClick CommandItemClickCommand; Visibility Visibility(CommandItems.Count)"/>
<!--https://android.googlesource.com/platform/frameworks/base/+/refs/heads/main/core/res/res/layout/transient_notification_with_icon.xml-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:paddingLeftFitsWindowInsetsButExpanded="true"
            app:paddingRightFitsWindowInsets="true">
            <TextSwitcher
                android:id="@+id/center_print_textswitcher"
                android:visibility="gone"
                android:alpha="0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="32dp"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:animateLayoutChanges="true"
                android:background="@android:drawable/toast_frame"
                android:backgroundTint="?attr/colorSurface"
                android:inAnimation="@android:anim/fade_in"
                android:outAnimation="@android:anim/fade_out"
                app:MvxBind="TextFormatted ColourText(CenterPrint)">
                <TextView
                    tools:text="Waiting for players..."
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    tools:text="Waiting for players..."
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </TextSwitcher>
        </FrameLayout>
        <include layout="@layout/loading"/>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
