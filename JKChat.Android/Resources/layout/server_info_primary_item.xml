<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="24dp"
    android:paddingVertical="4dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:paddingLeftFitsWindowInsetsButExpanded="true"
    app:paddingRightFitsWindowInsets="true">
    <com.google.android.material.textview.MaterialTextView
        style="@style/OnSurfaceText.BodyLarge"
        tools:text="Jedi Academy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:MvxBind="Text Value"/>
    <com.google.android.material.textview.MaterialTextView
        style="@style/OnSurfaceVariantText.BodyMedium"
        tools:text="Game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:MvxBind="Text Key"/>
</LinearLayout>
