<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

	<style name="Dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@color/dialog_window_background</item>
		<item name="android:windowAnimationStyle">@style/DialogAnimation</item>
		<item name="android:colorControlActivated">@color/colorAccent</item>
		<item name="android:textColorHighlight">@color/accent_translucent</item>
	</style>
	<style name="DialogAnimation">
		<item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
		<item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
	</style>

	<style name="ToolbarTitle">
		<item name="android:textColor">@color/toolbar_title</item>
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">@font/anewhope_regular</item>
    </style>

	<style name="ToolbarSubtitle">
		<item name="android:textColor">@color/toolbar_subtitle</item>
		<item name="android:textSize">12sp</item>
		<item name="android:fontFamily">@font/ergoe_bold</item>
	</style>

	<style name="RegularText">
		<item name="android:textColor">@color/regular_text</item>
    </style>
	<style name="RegularText.15">
		<item name="android:textSize">15sp</item>
	</style>
	<style name="RegularText.15.Regular">
		<item name="android:fontFamily">@font/ergoe_regular</item>
	</style>
	<style name="RegularText.15.Medium">
		<item name="android:fontFamily">@font/ergoe_medium</item>
	</style>
	<style name="RegularText.15.Bold">
		<item name="android:fontFamily">@font/ergoe_bold</item>
	</style>
	<style name="RegularText.18">
		<item name="android:textSize">18sp</item>
	</style>
	<style name="RegularText.18.Bold">
		<item name="android:fontFamily">@font/ergoe_bold</item>
	</style>

	<style name="ChatText">
		<item name="android:textColor">@color/chat_text</item>
	</style>
	<style name="ChatText.13">
		<item name="android:textSize">13sp</item>
	</style>
	<style name="ChatText.13.Regular">
		<item name="android:fontFamily">@font/ocrastd_regular</item>
	</style>

	<style name="MessageText">
		<item name="android:textColor">@color/message_text</item>
		<item name="android:textColorHint">@color/message_placeholder_text</item>
		<item name="android:background">@null</item>
		<item name="android:inputType">textMultiLine</item>
	</style>
	<style name="MessageText.15">
		<item name="android:textSize">15sp</item>
	</style>
	<style name="MessageText.15.Regular">
		<item name="android:fontFamily">@font/arial_regular</item>
	</style>

	<style name="ChatTypeText">
		<item name="android:textColor">@color/message_text</item>
	</style>
	<style name="ChatTypeText.12">
		<item name="android:textSize">12sp</item>
	</style>
	<style name="ChatTypeText.12.Regular">
		<item name="android:fontFamily">@font/arial_regular</item>
	</style>

	<style name="DialogTitle">
		<item name="android:textColor">@color/dialog_title</item>
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">@font/anewhope_regular</item>
	</style>
	<style name="DialogButton">
		<item name="android:textColor">@color/dialog_button</item>
		<item name="android:textSize">12sp</item>
		<item name="android:fontFamily">@font/anewhope_regular</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:minWidth">80dp</item>
		<item name="android:paddingLeft">6dp</item>
		<item name="android:paddingRight">6dp</item>
		<item name="android:background">@null</item>
	</style>
	<style name="DialogInput">
		<item name="android:textColor">@color/dialog_input</item>
		<item name="android:textSize">15sp</item>
		<item name="android:fontFamily">@font/ergoe_medium</item>
		<item name="android:inputType">text</item>
		<item name="android:background">@null</item>
	</style>
	<style name="DialogText">
		<item name="android:textColor">@color/dialog_text</item>
		<item name="android:textSize">15sp</item>
		<item name="android:fontFamily">@font/ergoe_medium</item>
	</style>

	<style name="ScrollView">
		<item name="android:scrollbars">vertical</item>
		<item name="android:scrollbarSize">4dp</item>
		<item name="android:scrollbarStyle">outsideOverlay</item>
		<item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>
	</style>

	<style name="RecyclerView" parent="ScrollView">
	</style>
	
</resources>
